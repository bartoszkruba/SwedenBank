<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="javaFX.controllers.DeleteAccountController"
            prefHeight="400.0" prefWidth="600.0">

    <headerText>
        Before you can delete account you must transfer your money somwhere else
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="You need to choose account" GridPane.columnIndex="0" GridPane.rowIndex="0" textFill="red"
                   GridPane.columnSpan="3" visible="false" fx:id="accountError"/>
            <Label text="Choose Account: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ChoiceBox GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3" fx:id="accountChoiceBox"/>
        </GridPane>
    </content>
</DialogPane>
